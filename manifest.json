{
    "manifest_version": 3,
    "name": "Central Park Free Parking",
    "version": "1.0",
    "description": "Checks for free parking spaces in Central Park lots.",
    "permissions": [
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://centralpark.co.il/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}